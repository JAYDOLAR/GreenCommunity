<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <webSocket enabled="false" />
    <handlers>
      <add name="iisnode" path="server.js" verb="*" modules="iisnode"/>
    </handlers>
    <rewrite>
      <rules>
        <!-- Handle Next.js static files -->
        <rule name="NextjsStatic" stopProcessing="true">
          <match url="^_next/(.*)$" />
          <action type="Rewrite" url="client/.next/{R:1}" />
        </rule>
        
        <!-- Handle public assets -->
        <rule name="PublicAssets" stopProcessing="true">
          <match url="^(.*\.(ico|png|jpg|jpeg|gif|svg|css|js|woff|woff2|ttf|eot))$" />
          <action type="Rewrite" url="client/public/{R:1}" />
        </rule>
        
        <!-- Handle API routes -->
        <rule name="APIRoutes" stopProcessing="true">
          <match url="^api/(.*)$" />
          <action type="Rewrite" url="server.js"/>
        </rule>
        
        <!-- Handle all other requests through Express server -->
        <rule name="DynamicContent">
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="True"/>
          </conditions>
          <action type="Rewrite" url="server.js"/>
        </rule>
      </rules>
    </rewrite>
    
    <security>
      <requestFiltering>
        <hiddenSegments>
          <remove segment="bin"/>
        </hiddenSegments>
      </requestFiltering>
    </security>
    
    <httpErrors existingResponse="PassThrough" />
    <iisnode watchedFiles="web.config;*.js" nodeProcessCommandLine="node" />
  </system.webServer>
</configuration>
